<div class="row">
  <div class="col 2"></div>
  <div class="col 8">
     {{setVar "route" carpeta}}
      <table class="table table-striped table-bordered">
           <thead>
               <tr>
                   <td>
                      <h2>Archivos</h2>
                   </td>
                   <td>
                       <h2>Descargar</h2>
                   </td>
               </tr>
           </thead>
           <tbody>
               {{#each archivos as |key value|}}
               <tr>
                 <form action="/api/usuario/download/{{../route}}/{{key}}" method="GET">
                   <td>             
                        <h5>{{key}}</h5>                                                                                 
                   </td>
                   <td> 
                        <center><input type="submit" value="Descargar" class="btn btn-outline-success btn-sm with-button">  </center>
                   </td>
                 </form>    
               </tr>
               {{/each}}
           </tbody>
      </table>
      <center>
        <form action="/api/usuario/historias_clinicas/{{id_paciente}}?_method=GET" method="POST">
          <input type="hidden" value="GET" name="_method" />
          <button
          class="btn btn-outline-primary btn-sm with-button"
          type="submit"
          >Volver</button>
        </form>
      </center>
  </div>
  <div class="col 2"></div>
</div>