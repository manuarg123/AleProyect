<div class="row">
  <div class="col 2"></div>
  <div class="col 6">
    {{#each paciente}}
      {{#if nombre}}
        <center><h2>Editar Paciente</h2>
        <form
          action="/api/usuario/historias_clinicas/{{_id}}?_method=GET"
          method="POST"
        >
          <input type="hidden" value="GET" name="_method" />
          <button
            class="btn btn-outline-primary btn-sm"
            type="submit"
          >Ir a Historia clinica/consultas</button>
        </form>
        </center>
        <div class="row g-3">

          <form
            action="/api/usuario/pacientes/editar/{{_id}}?_method=PUT"
            method="POST"
          >
            <input type="hidden" name="_method" value="PUT" />
            <div class="form-group">
              <label for="nombres">Nombre</label>
              <input
                type="text"
                class="form-control"
                id="nombres"
                name="nombre"
                placeholder="Ingresar nombre"
                value="{{nombre}}"
              />
            </div>
            <div class="form-group">
              <label for="apellidos">Apellido</label>
              <input
                type="text"
                class="form-control"
                id="apellidos"
                name="apellido"
                placeholder="Ingresar apellido"
                value="{{apellido}}"
              />
            </div>
            <div class="form-group">
              <label for="dnis">Dni</label>
              <input
                type="text"
                class="form-control"
                id="dnis"
                name="dni"
                placeholder="Ingresar DNI"
                value="{{dni}}"
              />
            </div>
          {{/if}}
    {{/each}}
    
            <div class="form-group">
              <label>Fecha Nacimiento</label>
              <input
                type="date"
                class="form-control"
                name="fecha_nacimiento"
                value="{{nacimiento}}"
              />
            </div>
           {{#each paciente}}
      {{#if nombre}}
            <div class="form-group">
              <label for="">Direccion</label>
              <input
                type="text"
                class="form-control"
                id=""
                name="direccion"
                placeholder="Ingresar Dirección"
                value="{{direccion}}"
              />
            </div>
            <div class="form-group">
              <label for="">Localidad</label>
              <input
                type="text"
                class="form-control"
                id=""
                name="localidad"
                placeholder="Ingresar localidad"
                value="{{localidad}}"
              />
            </div>
            <div class="form-group">
              <label for="emails">Email</label>
              <input
                type="text"
                class="form-control"
                id="emails"
                name="email"
                placeholder="Ingrese un email"
                value="{{email}}"
              />
            </div>
            <div class="form-group">
              <label for="">Telefono 1</label>
              <input
                type="text"
                class="form-control"
                id=""
                name="telefono_1"
                placeholder="Ingresar teléfono 1"
                value="{{telefono_1}}"
              />
            </div>
            <div class="form-group">
              <label for="">Telefono 2</label>
              <input
                type="text"
                class="form-control"
                id=""
                name="telefono_2"
                placeholder="Ingresar teléfono 2"
                value="{{telefono_2}}"
              />
            </div>
            <div class="form-group">
              <label for="">Obra Social</label>
              <input
                type="text"
                class="form-control"
                id=""
                name="obra_social"
                placeholder="Ingresar obra social"
                value="{{obra_social}}"
              />
            </div>
            <div class="form-group">
              <label for="">Identificación obra social</label>
              <input
                type="text"
                class="form-control"
                id=""
                name="id_obra_social"
                placeholder="Ingresar identificacion obra social"
                value="{{id_obra_social}}"
              />
            </div>
            <center style="margin-top: 10px;"><input type="submit" class="btn btn-outline-success btn-sm" value="Guardar cambios"/>
           
              <button
                class="btn btn-outline-primary btn-sm"
                type="submit"
              ><a href="/api/usuario" style="text-decoration: none;">Volver</a></button>
            </center>
          </form>
        </div>
      {{/if}}
    {{/each}}
  </div>
  <div class="col 2"></div>
</div>